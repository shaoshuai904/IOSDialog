<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_alert_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="22dp"
            android:paddingRight="15dp"
            android:textAllCaps="false"
            android:textColor="@color/def_title_color"
            android:textSize="18sp"
            android:visibility="visible"
            tools:text="退出当前账号" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="15dp"
            android:paddingTop="22dp"
            android:paddingRight="15dp"
            android:paddingBottom="22dp"
            android:textSize="14sp"
            tools:text="再连续登陆15天，就可变身为QQ达人。退出QQ可能会使你现有记录归零，确定退出？" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="1dp"
            android:background="@color/act_line" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_height"
            android:layout_margin="1px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sel_alert_dialog_left"
                android:gravity="center"
                android:textColor="@color/def_left_color"
                android:textSize="18sp"
                tools:text="取消" />

            <View
                android:id="@+id/iv_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/act_line" />

            <TextView
                android:id="@+id/bt_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sel_alert_dialog_right"
                android:gravity="center"
                android:textColor="@color/def_right_color"
                android:textSize="18sp"
                tools:text="确定退出" />
        </LinearLayout>

    </LinearLayout>
</layout>